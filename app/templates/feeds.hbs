{{#paper-nav-container classNames="ember-app"}}

  {{#paper-sidenav classNames="md-sidenav-left md-whiteframe-z2" flex-layout="column" flex=true }}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <strong>Feeds ({{length}})</strong>
      </div>
    {{/paper-toolbar}}
    {{#paper-content}}
      {{#paper-list}}
        {{#each feed in this}}
          {{#link-to 'feed' feed}}
          {{#paper-item classNames="md-item"}}
            {{#paper-button classNames="md-primary md-button"}}
              {{feed.name}}
              <!--<div class="url">{{feed.url}}</div>-->
            {{/paper-button}}
          {{/paper-item}}
          {{/link-to}}
        {{/each}}
      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  {{#paper-content flex-layout="column" flex=true}}
    {{#paper-toolbar}}
    <div class="md-toolbar-tools">
      <h2 flex=true class="md-toolbar-tools">
        {{#paper-sidenav-toggle class="menu-sidenav-toggle"}}
          {{paper-icon icon="menu"}}
        {{/paper-sidenav-toggle}}
        <img src="/images/emberjs-logo.png" height="50">
        Ember Feed Reader
      </h2>
      {{#link-to "feeds.new" class="new"}}
        {{#paper-button classNames="md-icon"}}
          {{paper-icon icon="add-circle" size="lg"}}
        {{/paper-button}}
      {{/link-to}}
    </div>
    {{/paper-toolbar}}
    <div class="logo">
      {{outlet}}
    </div>
  {{/paper-content}}

{{/paper-nav-container}}
